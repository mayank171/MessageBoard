<div class="comment">
    <p class="comment-content"><%= comment.content %> </p>
    <p class="comment-posted-by">Posted by: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</p>
    
     <div class="links links btn-group">
       <% if user_signed_in? %>
         <% if comment.user.id==current_user.id %>
            <%= link_to "Edit", edit_message_comment_path(comment.message, comment), class:"btn btn-default" %>
            <%= button_to "Delete", message_comment_path(comment.message, comment),method: :delete, data: { confirm: "Are Your Sure?" }, class:"btn btn-default" %>
         <% end %>
       <% end %>
     </div>
    </div>